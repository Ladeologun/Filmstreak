{
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
        "*": ["/*"],
        "~apiclient": ["apiclient"],
        "~components": ["components"],
        "~drawables": ["assets/drawables"],
        "~movies/*": ["features/movies/*"],
        "~styles": ["styles"],
        "~utils": ["utils"],
        "~utils/*": ["utils/*"],
        "~navigation": ["navigation"],
        "~navigation/*": ["navigation/*"],
        "~hooks": ["hooks"],
        "~hooks/*": ["hooks/*"],
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json",
  "exclude": ["__tests__/**/*-test.ts"]
}
